<div class="booyah-box col-10 offset-1">
  <div class="row">
    <div class="col-md-4">
      <%= image_tag 'user.png', class: 'user-avatar' %>
    </div>

    <div class="col-md-8">
      <h1><%= @user.email %></h1>
      <h3>Member Since: <%= @user.created_at.strftime("%B %d, %Y") %></h3>
      <h4>Comments: <%= @user.comments.count %></h4>
      <h4>5 Star Reviews: <%= @user.comments.where(rating: '5_stars').count %></h4>
    </div>
  </div>
  <div class="clear"></div>
</div>